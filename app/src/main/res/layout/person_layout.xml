<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:qmui_topbar_bg_color="#f6f6f6"
        app:qmui_topbar_title_color="#161616"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="49dp"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="428px"
            android:background="@color/qmui_config_color_white"
            >

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_alignParentTop="true"
                android:background="@mipmap/pc_beijing">
                <!-- 头像 -->
                <com.auto.mobile.common.view.RoundImageView
                    android:id="@+id/img_head"
                    android:layout_width="134px"
                    android:layout_height="134px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="34px"
                    android:src="@mipmap/toxiang_my" />

                <TextView
                    android:id="@+id/tv_NickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_head"
                    android:layout_marginTop="22px"
                    android:gravity="center"
                    android:text="赵丽颖"
                    android:textColor="#161616"
                    android:textSize="32px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="128px"
                android:layout_height="128px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="31dp"
                android:src="@mipmap/pc_fabuixnix" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!-- 我的发布 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/qmui_config_color_white"
                >
                <TextView
                    android:id="@+id/tv_release"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="我的发布"
                    android:textSize="34px"
                    android:textColor="#161616"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/pc_myfabu"
                    android:drawablePadding="16px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:drawableRight="@mipmap/gengduo"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d2d2d2"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                />
            <!-- 获得的服务 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/qmui_config_color_white"
                >
                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="获得的服务"
                    android:textSize="34px"
                    android:textColor="#161616"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/pc_fuwu"
                    android:drawablePadding="16px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:drawableRight="@mipmap/gengduo"
                    />

            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d2d2d2"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                />
            <!-- 设置 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/qmui_config_color_white"
                >
                <TextView
                    android:id="@+id/tv_setup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="设置"
                    android:textSize="34px"
                    android:textColor="#161616"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/pc_shezhi"
                    android:drawablePadding="16px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:drawableRight="@mipmap/gengduo"
                    />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</FrameLayout>