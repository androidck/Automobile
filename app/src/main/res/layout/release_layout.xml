<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f6f6f6"
    >
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:qmui_topbar_bg_color="#f6f6f6"
        app:qmui_topbar_title_color="#161616"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="330px"
            android:background="@color/qmui_config_color_white">

            <EditText
                android:id="@+id/ed_context"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_marginTop="30px"
                android:background="@null"
                android:gravity="center_vertical|top"
                android:hint="说说你看到的真事儿......" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:src="@mipmap/tianjialuyin" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:src="@mipmap/tianjiatupian" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="116px"
            android:background="@color/qmui_config_color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:background="@drawable/tv_address"
                android:drawableLeft="@mipmap/qj_dingwei"
                android:drawablePadding="10px"
                android:gravity="center"
                android:paddingLeft="24px"
                android:paddingRight="24px"
                android:text="港沟街道"
                android:textColor="#1d75d8" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginTop="90px"
            android:text="提交"
            app:qmui_isRadiusAdjustBounds="true"
            app:qmui_backgroundColor="@color/colorDataColor"
            app:qmui_borderColor="@color/colorDataColor"
            android:textColor="#666666"
            android:textSize="38px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>