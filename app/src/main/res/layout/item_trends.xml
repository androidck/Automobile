<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        >
        <!-- 1 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="142px"
            android:orientation="vertical"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <!-- 头像 -->
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    >
                    <com.auto.mobile.common.view.RoundImageView
                        android:id="@+id/item_image"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:src="@mipmap/ic_launcher"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>

                <!-- 昵称 位置 距离 -->
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_NickName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:text="赵丽颖"
                        android:textSize="34px"
                        android:textColor="#161616"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical|bottom"
                        />
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20px"
                            android:textSize="26px"
                            android:textColor="#aaaaaa"
                            android:text="今天21:30"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距您1.6km"
                            android:textSize="26px"
                            android:textColor="#aaaaaa"
                            android:gravity="center_vertical"
                            android:drawableLeft="@mipmap/home_dingwei01"
                            android:layout_marginLeft="37px"
                            android:drawablePadding="14px"
                            />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <!-- 已读还是未读 -->
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    >
                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/btn_login"
                        android:layout_width="114px"
                        android:layout_height="44px"
                        android:text="已读"
                        app:qmui_isRadiusAdjustBounds="true"
                        app:qmui_backgroundColor="@color/colorDataColor"
                        app:qmui_borderColor="@color/colorDataColor"
                        android:textColor="#bb8a00"
                        android:textSize="28px"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今天济南某某街道交叉路口发生两车追尾事件今天济南某某街道交叉路口发生两车追尾事件"
            android:textColor="#161616"
            android:textSize="32px"
            android:maxLines="2"
            android:layout_marginTop="24px"
            />
        
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:orientation="horizontal"
            >
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="214px"
                    android:layout_height="214px"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/home_qct"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="214px"
                    android:layout_height="214px"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/home_qct"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_three"
                    android:layout_width="214px"
                    android:layout_height="214px"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/home_qct"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>
        <!-- 底部 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="146px"
            android:orientation="horizontal"
            >
            <!-- 左边 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="山东省济南市高新区汉峪金谷"
                    android:textSize="32px"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/dingwei001"
                    android:drawablePadding="14px"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <!-- 又边 -->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/ig_btn_phone"
                    android:layout_width="54px"
                    android:layout_height="84px"
                    android:src="@mipmap/dianhua01"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>