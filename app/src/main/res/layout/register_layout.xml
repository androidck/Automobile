<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f6f6f6"
    >
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:qmui_topbar_bg_color="#f6f6f6"
        app:qmui_topbar_title_color="#161616"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_white"
        android:orientation="vertical"
        >
        <!-- 手机号 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="126px"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            >
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:layout_gravity="bottom"
                android:drawableLeft="@mipmap/dl_phone"
                android:drawablePadding="18px"
                android:inputType="number"
                android:textSize="32px"
                android:maxLength="13"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            />
        <!-- 验证码 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="112px"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            >
            <EditText
                android:id="@+id/ed_code"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:hint="输入验证码"
                android:background="@null"
                android:textSize="32px"
                android:maxLength="6"
                android:inputType="number"
                />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/send_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70px"
                android:text="获取验证码"
                android:layout_gravity="bottom|right"
                app:qmui_isRadiusAdjustBounds="true"
                app:qmui_backgroundColor="@color/colorBgColor"
                app:qmui_borderColor="@color/colorBgColor"
                android:textColor="#161616"
                android:textSize="30px"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            />
        <!-- 登录密码 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="112px"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            >
            <EditText
                android:id="@+id/ed_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="设置登录密码"
                android:layout_gravity="bottom"
                android:drawableLeft="@mipmap/dl_lock"
                android:drawablePadding="18px"
                android:inputType="textPassword"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            />
        <!-- 确认密码 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="112px"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="#121212"
                android:textSize="32px"
                android:layout_gravity="bottom"
                />
            <EditText
                android:id="@+id/ed_qr_pwd"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="再次输入登录密码"
                android:layout_gravity="bottom"
                android:drawablePadding="18px"
                android:textSize="32px"
                android:inputType="textPassword"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            />
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:text="立即注册"
            app:qmui_isRadiusAdjustBounds="true"
            app:qmui_backgroundColor="@color/colorBgColor"
            app:qmui_borderColor="@color/colorBgColor"
            android:textColor="#161616"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:textSize="30px"
            android:layout_marginTop="32px"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/is_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="26px"
                android:text="我同意已并阅读"
                style="@style/CustomCheckBoxThemeRegister"
                android:padding="18px"
                />
            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户注册协议》"
                android:textColor="#f69700"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>