<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fad742">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fbfcfe"
        android:orientation="vertical"
        >
        <!-- 背景图 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="482px"
            android:background="@mipmap/dl_beijing01"
            ></com.zhy.autolayout.AutoLinearLayout>
        <!-- 输入框一 -->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120px"
            android:layout_marginLeft="108px"
            android:layout_marginRight="108px"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:maxLength="13"
                android:inputType="number"
                android:drawableLeft="@mipmap/dl_phone"
                android:background="@null"
                android:drawablePadding="14px"
                android:textSize="32px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="16px"
                android:background="#d2d2d2" />
        </com.zhy.autolayout.AutoLinearLayout>
        <!-- 输入框二-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_marginLeft="108px"
            android:layout_marginRight="108px"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/ed_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:drawableLeft="@mipmap/dl_lock"
                android:background="@null"
                android:drawablePadding="14px"
                android:textSize="32px"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="16px"
                android:background="#d2d2d2" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:layout_marginLeft="90px"
            android:layout_marginRight="90px"
            android:layout_marginTop="52px"
            android:text="登录"
            app:qmui_isRadiusAdjustBounds="true"
            app:qmui_backgroundColor="@color/colorBgColor"
            app:qmui_borderColor="@color/colorBgColor"
            android:textColor="#161616"
            android:textSize="38px"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="110px"
            android:layout_marginRight="110px"
            android:layout_marginTop="10px"
            >
            <TextView
                android:id="@+id/tv_forgot"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:gravity="center_vertical"
                android:textColor="#999999"
                android:autoLink="all"
                />
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="快速注册"
                android:gravity="center_vertical|right"
                android:textColor="#999999"
                android:autoLink="all"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</FrameLayout>